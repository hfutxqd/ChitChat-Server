<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white_full"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/explore_item_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/explore_item_nickname"
                android:text="徐啟东"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black_87p"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/explore_item_time"
                android:text="今天22:58"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/explore_item_text"
        android:text="哈哈哈,今天捡到了10亿,交给警察叔叔了...."
        android:layout_margin="8dp"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:textSize="16sp"
        android:textColor="@color/black_87p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/explore_item_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/explore_like_comment_count"
            android:layout_margin="8dp"
            android:text="@string/explore_like_comment_count"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/explore_item_comment"
            android:layout_margin="8dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_comment_black_24dp"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <ImageView
            android:id="@+id/explore_item_like"
            android:layout_margin="8dp"
            android:layout_toLeftOf="@id/explore_item_comment"
            android:layout_toStartOf="@id/explore_item_comment"
            android:src="@drawable/ic_favorite_border_black_24dp"
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </RelativeLayout>
    <View
        android:background="@color/blue_grey_100"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>